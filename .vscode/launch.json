{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "streamlit debug",
          "type": "python",
          "request": "launch",
          "module": "streamlit",                 // appの代わりにコレ
          "console": "integratedTerminal",
          "env": {
              "PYTHONPATH": "${workspaceFolder}",
          },
          "args": [                              // オプションはコレ
              "run",
              "${file}",
              "--server.port",
              "5678"
          ]
      }
  ]
}
